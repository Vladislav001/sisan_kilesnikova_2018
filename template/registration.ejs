<link rel="stylesheet" href="css/main.css">

<% layout('layout/pattern') -%>
<% block('title') -%>

<div class="container" style="width:50%; text-align:center">
<form class="logform" action="/signup" method="POST" name="signupForm" >
  <h2 class="text-center formHead animated bounceInDown">Регистрация</h2><br>
  <div class="form-group">
  <input type="email" name="username" class="form-control" placeholder="Введите E-mail"/>
  </div>
  <div class="form-group">
  <input type="password" name="password" class="form-control" placeholder="Введите пароль">
  </div>
  <button class="btn btn-lg btn-primary btn-block loginbtn" type="submit">Зарегистрироваться</button>
</form>
  </div>
